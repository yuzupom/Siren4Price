<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="値段を入力"
        android:inputType="number"
        android:id="@+id/text_price"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:clickable="false"
            android:layout_weight="1">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radio_buy"
                android:text="買値"
                android:checked="true"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/radio_sell"
                android:text="売値" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="検索"
            android:id="@+id/button_search"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="クリア"
            android:id="@+id/button_clear"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:id="@+id/checkbox_bangle"
            android:text="腕輪"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:id="@+id/checkbox_leaf"
            android:text="草"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:id="@+id/checkbox_scroll"
            android:text="巻物"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:id="@+id/checkbox_rod"
            android:text="杖"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="true"
            android:id="@+id/checkbox_pot"
            android:text="壺"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/checkbox_all"
            android:text="クリア"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/list_item_item">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:text="アイテム名"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="買値"
            android:layout_gravity="center_horizontal"
            android:gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="売値"
            android:layout_gravity="center_horizontal"
            android:gravity="right" />

    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_items"/>
</LinearLayout>
